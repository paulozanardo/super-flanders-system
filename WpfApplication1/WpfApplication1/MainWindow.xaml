<Window x:Class="ProgramaModificaArquivoZip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programa Correção caca LOG!" Height="334" Width="630" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="0,0,-6,-8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Modificar Arquivo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="170" Height="20" Click="Button_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textoGeracao" HorizontalAlignment="Left" Height="250" 
                 Margin="10,35,0,0" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Visible" 
                 VerticalScrollBarVisibility="Visible" Text="" 
                 IsReadOnly="True" VerticalAlignment="Top" Width="593" Grid.ColumnSpan="2"/>
        <Grid Grid.Column="1" Margin="44,10,77,254">
            <RadioButton x:Name="somenteOrigem" Content="Somente a pasta origem" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="True" Visibility="Collapsed"/>
            <RadioButton x:Name="tudoDaOrigem" Content="Pasta origem e subpastas" HorizontalAlignment="Left" Margin="168,0,-13,0" VerticalAlignment="Top" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
